{% extends '/default.twig'%}

{% block content %}

<h1><a href="/book">{{book.name}}</a></h1>

{% if book.cover != 'null' %}

    <img height="200px" src= "../public/img/cover/{{book.cover}}" alt="Cover">

{% endif %}

{% for chapter in chapters %}

    <li><a href="/chapter/{{chapter.id}}">{{chapter.name}}</a></li>

{% endfor %}

<p>By {{book.owner}}</p>

{% endblock %}